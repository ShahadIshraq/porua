{
  "name": "tts-reader-extension",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "build": "node build/bundle.js",
    "dev": "node build/bundle.js --watch",
    "package": "node build/package.js",
    "package:chrome": "node build/package.js --chrome",
    "package:firefox": "node build/package.js --firefox",
    "release": "npm run build && npm run package"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "archiver": "^7.0.1",
    "esbuild": "^0.19.0",
    "fs-extra": "^11.3.2",
    "happy-dom": "^20.0.0",
    "jsdom": "^27.0.0",
    "vitest": "^3.2.4"
  }
}
