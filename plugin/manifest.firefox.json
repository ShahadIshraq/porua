{
  "manifest_version": 3,
  "name": "TTS Reader",
  "version": "1.0.0",
  "description": "Text-to-speech reader for web pages",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "TTS Reader Settings"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"],
      "css": [
        "src/styles/variables.css",
        "src/styles/content/play-button.css",
        "src/styles/content/player-control.css",
        "src/styles/content/highlighting.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["storage"],
  "host_permissions": ["http://localhost/*", "https://*/*"],
  "browser_specific_settings": {
    "gecko": {
      "id": "tts-reader@example.com",
      "strict_min_version": "109.0"
    }
  }
}
