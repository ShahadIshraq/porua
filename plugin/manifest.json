{
  "manifest_version": 3,
  "name": "TTS Reader",
  "version": "1.0.0",
  "description": "Text-to-speech reader for web pages",
  "icons": {
    "16": "icons/icon.svg",
    "48": "icons/icon.svg",
    "128": "icons/icon.svg"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "css": ["src/content.css"],
      "run_at": "document_idle"
    }
  ],
  "permissions": []
}
